<%= render 'layouts/flash_messages' %>
<h1 class="ui center aligned icon header">
  <i class="circular icon users"></i>
  Message Me
</h1>

<div class="ui two column grid">
  <div class="row">
    <div class="twelve wide column">
      <div class="ui raised card chatbox">
        <div class="ui content segment">
          <div class="header">Chat Room</div>
          <div class="ui large relaxed list" id="messages">
            <%= render @messages %>
          </div>
        </div>
        <div class="extra content">
          <div class="ui action input" style="width: 100%;">
            <input type="text" data-behavior="chat_room_speaker">
            <button class="ui icon button submit">
              <i class="chevron circle right icon"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
    <div class="four wide column">
      <div class="ui raised card chatbox">
        <div class="content">
          <div class="header">Users</div>
          <div class="ui large relaxed middle aligned list" id="users">
            <%= render @users %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
