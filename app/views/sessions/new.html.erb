<%= render 'layouts/flash_messages' %>

<% if current_user %>
  <h2 id="notice" class='ui centered aligned header'>User is already logged in </h2>
<% else %>
<h1 class='ui centered aligned header'>Login</h1>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_with url: login_path, html: {class: 'ui form'}, method: :post do |form| %>
        <div class="field">
          <%= form.label :email %>
          <div class="ui left icon input">
            <!-- <input type="text" placeholder="Username"> -->
            <%= form.email_field :email, placeholder: 'Email' %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= form.label :password %>
          <div class="ui left icon input">
            <!-- <input type="password"> -->
            <%= form.password_field :password %>
            <i class="lock icon"></i>
          </div>
        </div>
        <div class="field">
          <%= form.submit 'Submit', class: 'ui blue submit button' %>
        </div>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>

  <div class="ui vertical divider">
    Or
  </div>

</div>
<% end %>
