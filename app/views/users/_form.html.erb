<%= form_with(model: user, local: true, html: {class: 'ui form'}) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, placeholder: 'First Name' %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, placeholder: 'Last Name' %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, placeholder: 'Email' %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit 'Submit', class: 'ui primary button' %>
  </div>
<% end %>
